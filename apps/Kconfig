endmenu

menu "Ara Applications"
source "$APPSDIR/ara/Kconfig"
endmenu

menuconfig GREYBUS_UTILS
    bool "Greybus utility"
    default n

if GREYBUS_UTILS
source "$APPSDIR/greybus-utils/Kconfig"
endif

menu "Examples"
source "$APPSDIR/examples/Kconfig"
endmenu

menu "Graphics Support"
